/*
-------------------------------通道注册信息--------------------------------------
    CAN_DEF(_COM_, _ENABLE, _PIN_TX, _PIN_SDA,  _CAN_BASE, _GPIO_BASE, _RCC)
    _COM_:         统一通道编号
    _ENABLE：      使能
    _PIN_TX：      发送管脚
    _PIN_RX：      接收管脚
    _CAN_BASE：    CAN寄存器基准地址,模拟CAN则填0
    _GPIO_BASE：   GPIO寄存器基准地址
    _RCC：         CAN系统时钟,模拟CAN则填0
********************************************************************************-
*/


BEGIN_CAN_CFG
    CAN_DEF(CAN_COM_0, 1, GPIO_PinSource9, GPIO_PinSource8,    CAN1_BASE, GPIOB_BASE, RCC_APB1Periph_CAN1, CAN_Filter_FIFO0)
    CAN_DEF(CAN_COM_1, 1, GPIO_PinSource13, GPIO_PinSource12,  CAN2_BASE, GPIOB_BASE, RCC_APB1Periph_CAN2, CAN_Filter_FIFO1)
END_CAN_CFG

